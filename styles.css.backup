/* Animation Classes */
.fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.fade-in.visible {
    opacity: 1;
    transform: translateY(0);
}

/* MIND-BLOWING Visual Effects */
.hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.4) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.4) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 60% 60%, rgba(255, 219, 120, 0.3) 0%, transparent 50%);
    animation: gradient-shift 15s ease-in-out infinite;
    filter: blur(1px);
}

/* AMAZING 3D Light Rays */
.hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: 
        conic-gradient(from 0deg, transparent 0deg, rgba(255, 255, 255, 0.1) 45deg, transparent 90deg, rgba(255, 255, 255, 0.1) 135deg, transparent 180deg, rgba(255, 255, 255, 0.1) 225deg, transparent 270deg, rgba(255, 255, 255, 0.1) 315deg, transparent 360deg);
    /* animation: light-rotation 20s linear infinite; */
    z-index: 2;
}

@keyframes light-rotation {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* MIND-BLOWING Floating Elements */
.hero {
    perspective: 1000px;
    transform-style: preserve-3d;
}

.hero-content {
    transform-style: preserve-3d;
    /* animation: hero-float 8s ease-in-out infinite; */
}

@keyframes hero-float {
    0%, 100% { transform: translateZ(0) rotateX(0deg) rotateY(0deg); }
    25% { transform: translateZ(20px) rotateX(2deg) rotateY(1deg); }
    50% { transform: translateZ(40px) rotateX(0deg) rotateY(2deg); }
    75% { transform: translateZ(20px) rotateX(-2deg) rotateY(1deg); }
}

@keyframes gradient-shift {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.8; }
}

/* Floating geometric shapes */
.geometric-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 3;
}

.shape {
    position: absolute;
    opacity: 0.1;
    /* animation: float-shape 20s linear infinite; */
}

.shape-1 {
    width: 100px;
    height: 100px;
    background: var(--accent-color);
    border-radius: 50%;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.shape-2 {
    width: 60px;
    height: 60px;
    background: var(--secondary-color);
    transform: rotate(45deg);
    top: 60%;
    right: 15%;
    animation-delay: 5s;
}

.shape-3 {
    width: 80px;
    height: 80px;
    background: var(--accent-color);
    border-radius: 50%;
    bottom: 30%;
    left: 20%;
    animation-delay: 10s;
}

.shape-4 {
    width: 40px;
    height: 40px;
    background: var(--secondary-color);
    transform: rotate(45deg);
    top: 40%;
    right: 30%;
    animation-delay: 15s;
}

@keyframes float-shape {
    0% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
    10% { opacity: 0.1; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100px) rotate(360deg); opacity: 0; }
}

/* Enhanced timeline with connecting lines */
.timeline::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, transparent, var(--secondary-color), transparent);
    transform: translateX(-50%);
    /* animation: timeline-glow 3s ease-in-out infinite; */
}

@keyframes timeline-glow {
    0%, 100% { box-shadow: 0 0 10px var(--secondary-color); }
    50% { box-shadow: 0 0 20px var(--secondary-color), 0 0 30px var(--secondary-color); }
}

/* Enhanced cards with 3D effects */
.social-card, .mandir-card, .interview-card {
    transform-style: preserve-3d;
    transition: all 0.4s ease;
}

.social-card:hover, .mandir-card:hover, .interview-card:hover {
    transform: translateY(-20px) rotateX(8deg) rotateY(8deg) scale(1.05);
    box-shadow: 
        0 30px 60px rgba(0, 0, 0, 0.4),
        0 0 0 2px rgba(255, 255, 255, 0.2),
        0 0 30px rgba(255, 107, 107, 0.3),
        0 0 60px rgba(78, 205, 196, 0.2);
}

.social-card:hover .card-icon,
.mandir-card:hover .mandir-icon,
.interview-card:hover .yourstory-logo {
    transform: scale(1.2) translateZ(40px) rotateY(20deg);
    box-shadow: 
        0 20px 60px rgba(0, 0, 0, 0.5),
        0 0 0 3px rgba(255, 255, 255, 0.3),
        0 0 40px rgba(255, 107, 107, 0.8),
        0 0 80px rgba(78, 205, 196, 0.5);
}

/* Glowing borders */
.social-card::before, .mandir-card::before, .interview-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 20px;
    padding: 2px;
    background: linear-gradient(45deg, var(--accent-color), var(--secondary-color), var(--accent-color));
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.social-card:hover::before, .mandir-card:hover::before, .interview-card:hover::before {
    opacity: 1;
}

/* Enhanced gallery with perspective */
.gallery-grid {
    perspective: 1000px;
}

.gallery-item {
    transform-style: preserve-3d;
    transition: all 0.5s ease;
}

.gallery-item:hover {
    transform: scale(1.1) rotateY(15deg) rotateX(5deg);
    z-index: 10;
}

/* Floating Celebration Elements */
.floating-celebration {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
}

.float-element {
    position: absolute;
    font-size: 2rem;
    opacity: 0.3;
    /* animation: float-celebration 8s ease-in-out infinite; */
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
}

.float-element:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.float-element:nth-child(2) {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
}

.float-element:nth-child(3) {
    bottom: 30%;
    left: 20%;
    animation-delay: 4s;
}

.float-element:nth-child(4) {
    top: 40%;
    right: 30%;
    animation-delay: 6s;
}

@keyframes float-celebration {
    0%, 100% { 
        transform: translateY(0) rotate(0deg) scale(1); 
        opacity: 0.3; 
    }
    25% { 
        transform: translateY(-30px) rotate(90deg) scale(1.1); 
        opacity: 0.6; 
    }
    50% { 
        transform: translateY(-60px) rotate(180deg) scale(1.2); 
        opacity: 0.8; 
    }
    75% { 
        transform: translateY(-30px) rotate(270deg) scale(1.1); 
        opacity: 0.6; 
    }
}

/* Animated background patterns */
.section-bg-pattern {
    position: relative;
    overflow: hidden;
}

.section-bg-pattern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(circle at 25% 25%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, rgba(255, 119, 198, 0.1) 0%, transparent 50%);
    /* animation: pattern-move 20s linear infinite; */
}

@keyframes pattern-move {
    0% { transform: translateX(0) translateY(0); }
    100% { transform: translateX(100px) translateY(100px); }
}

/* Enhanced buttons with gradients */
.read-more-btn, .scroll-to-top {
    background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
    background-size: 200% 200%;
    /* animation: gradient-shift 3s ease infinite; */
    position: relative;
    overflow: hidden;
}

.read-more-btn::before, .scroll-to-top::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
}

.read-more-btn:hover::before, .scroll-to-top:hover::before {
    left: 100%;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: var(--section-bg);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: var(--holographic);
    background-size: 400% 400%;
    border-radius: 10px;
    /* animation: gradient-shift 3s ease infinite; */
    border: 2px solid transparent;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--neo-gradient-1);
    box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
}

/* SPECTACULAR Text Effects */
.hero-title {
    font-size: 5.5rem;
    color: white;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    font-weight: 900;
    background: var(--holographic);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    /* animation: holographic-text 4s ease infinite, text-glow 2s ease-in-out infinite alternate; */
    text-shadow: none;
    position: relative;
}

.hero-title::before {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    /* animation: shimmer 3s ease infinite; */
}

@keyframes holographic-text {
    0%, 100% { 
        background-position: 0% 50%;
        filter: hue-rotate(0deg);
    }
    25% { 
        background-position: 100% 50%;
        filter: hue-rotate(90deg);
    }
    50% { 
        background-position: 50% 100%;
        filter: hue-rotate(180deg);
    }
    75% { 
        background-position: 0% 50%;
        filter: hue-rotate(270deg);
    }
}

@keyframes text-glow {
    0% { 
        filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8)) 
                drop-shadow(0 0 10px rgba(255, 107, 107, 0.6))
                drop-shadow(0 0 15px rgba(78, 205, 196, 0.4));
    }
    100% { 
        filter: drop-shadow(0 0 10px rgba(255, 255, 255, 1)) 
                drop-shadow(0 0 20px rgba(255, 107, 107, 0.8))
                drop-shadow(0 0 30px rgba(78, 205, 196, 0.6));
    }
}

@keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
}

/* ULTRA-MODERN Loading Screen */
.loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: var(--neo-gradient-1);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
}

.loading-screen::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    animation: loading-bg 4s ease-in-out infinite;
}

@keyframes loading-bg {
    0%, 100% { 
        transform: scale(1) rotate(0deg);
        opacity: 0.5;
    }
    50% { 
        transform: scale(1.1) rotate(180deg);
        opacity: 0.8;
    }
}

.loading-content {
    text-align: center;
    color: white;
    z-index: 2;
    position: relative;
}

.loading-spinner {
    width: 80px;
    height: 80px;
    border: 6px solid rgba(255, 255, 255, 0.2);
    border-top: 6px solid white;
    border-radius: 50%;
    animation: ultra-spin 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite;
    margin: 0 auto 2rem;
    position: relative;
}

.loading-spinner::before {
    content: '';
    position: absolute;
    top: -6px;
    left: -6px;
    right: -6px;
    bottom: -6px;
    border: 6px solid transparent;
    border-top: 6px solid rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    animation: ultra-spin 2s linear infinite reverse;
}

@keyframes ultra-spin {
    0% { 
        transform: rotate(0deg) scale(1);
        box-shadow: 0 0 0 rgba(255, 255, 255, 0);
    }
    50% { 
        transform: rotate(180deg) scale(1.1);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    }
    100% { 
        transform: rotate(360deg) scale(1);
        box-shadow: 0 0 0 rgba(255, 255, 255, 0);
    }
}

.loading-content h2 {
    font-size: 2rem;
    font-weight: 300;
    background: var(--holographic);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    /* animation: holographic-text 3s ease infinite; */
    margin-bottom: 1rem;
}

/* INCREDIBLE Smooth Page Transitions */
.page-transition {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: var(--neo-gradient-2);
    z-index: 9999;
    transform: translateX(-100%);
    transition: transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
}

.page-transition.active {
    transform: translateX(0);
}

.page-transition::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: var(--neo-gradient-3);
    transform: skewX(-20deg) translateX(100%);
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1) 0.2s;
}

.page-transition.active::before {
    transform: skewX(-20deg) translateX(-20%);
}

/* ADVANCED Micro-interactions */
.btn-advanced {
    position: relative;
    overflow: hidden;
    background: var(--glassmorphism-bg);
    backdrop-filter: blur(var(--blur-strength));
    border: 2px solid var(--glassmorphism-border);
    border-radius: 25px;
    padding: 1rem 2rem;
    color: white;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    cursor: pointer;
}

.btn-advanced::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s cubic-bezier(0.23, 1, 0.32, 1);
}

.btn-advanced:hover::before {
    left: 100%;
}

.btn-advanced:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.3),
        0 0 20px rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
}

/* FUTURISTIC Gradient Animations */
@keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    25% { background-position: 100% 50%; }
    50% { background-position: 50% 100%; }
    75% { background-position: 0% 50%; }
}

/* Music notification pulse animation */
@keyframes pulse {
    0% { 
        transform: scale(1);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }
    50% { 
        transform: scale(1.05);
        box-shadow: 0 15px 40px rgba(0,0,0,0.5), 0 0 20px rgba(255, 107, 107, 0.5);
    }
    100% { 
        transform: scale(1);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }
}

/* Enhanced music button styling */
.music-toggle.playing {
    background: linear-gradient(45deg, #4CAF50, #45a049) !important;
    box-shadow: 0 0 20px rgba(76, 175, 80, 0.5) !important;
    animation: pulse-success 2s ease-in-out infinite !important;
}

@keyframes pulse-success {
    0%, 100% { 
        transform: scale(1);
        box-shadow: 0 0 20px rgba(76, 175, 80, 0.5);
    }
    50% { 
        transform: scale(1.02);
        box-shadow: 0 0 30px rgba(76, 175, 80, 0.8);
    }
}
