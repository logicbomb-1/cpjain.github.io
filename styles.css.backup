/* Extra small devices */
@media (max-width: 320px) {
    .hero-title {
        font-size: 1.5rem;
    }
    
    .section-header h2 {
        font-size: 1.5rem;
    }
    
    .floating-card {
        padding: 1rem;
    }
    
