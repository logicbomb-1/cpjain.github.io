/* Gallery Section */
.gallery-section {
    padding: 6rem 0;
    background: var(--section-bg);
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.gallery-item {
    aspect-ratio: 1;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all 0.6s ease;
    transform-style: preserve-3d;
    position: relative;
}

.gallery-item::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57, #ff9ff3, #54a0ff);
    background-size: 400% 400%;
    border-radius: 17px;
    z-index: -1;
    animation: gradient-shift 4s ease infinite;
    filter: blur(10px);
    opacity: 0;
    transition: opacity 0.5s ease;
}

.gallery-item:hover::before {
    opacity: 0.8;
}

.gallery-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%, rgba(255, 255, 255, 0.05) 100%);
    border-radius: 15px;
    pointer-events: none;
}

.gallery-item:hover {
    transform: scale(1.1) rotateY(15deg) rotateX(5deg) translateZ(30px);
    z-index: 10;
    box-shadow: 
        0 30px 60px rgba(0, 0, 0, 0.3),
        0 0 0 2px rgba(255, 255, 255, 0.1),
        0 0 30px rgba(102, 126, 234, 0.5);
}

.gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 15px;
    transition: transform 0.3s ease;
}

.gallery-placeholder {
    width: 100%;
    height: 100%;
    background: var(--gradient-celebration);
    background-size: 400% 400%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    animation: gradient-shift 4s ease infinite;
}

.gallery-placeholder i {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.8;
}

.gallery-placeholder p {
    font-size: 1.1rem;
    font-weight: 600;
}

.gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(102, 126, 234, 0.9), rgba(118, 75, 162, 0.9));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
    border-radius: 15px;
}

.gallery-item:hover .gallery-overlay {
    opacity: 0;
}

.overlay-content {
    text-align: center;
    color: white;
    transform: translateY(20px);
    transition: transform 0.3s ease;
}

.gallery-item:hover .overlay-content {
    transform: translateY(0);
}

.overlay-content i {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    display: block;
}

.overlay-content span {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Retirement Celebration Section */
.retirement-celebration {
    padding: 6rem 0;
    background: var(--gradient-secondary);
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
    perspective: 1000px;
}

/* AMAZING Celebration Background */
.retirement-celebration::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: 
        radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    /* animation: celebration-bg 10s ease-in-out infinite; */
    z-index: 1;
}

@keyframes celebration-bg {
    0%, 100% { transform: scale(1) rotate(0deg); opacity: 0.5; }
    50% { transform: scale(1.2) rotate(180deg); opacity: 0.8; }
}

/* MIND-BLOWING Confetti Animation */
.retirement-celebration::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(circle at 20% 80%, #ff6b6b 2px, transparent 2px),
        radial-gradient(circle at 40% 20%, #4ecdc4 2px, transparent 2px),
        radial-gradient(circle at 60% 60%, #feca57 2px, transparent 2px),
        radial-gradient(circle at 80% 40%, #ff9ff3 2px, transparent 2px),
        radial-gradient(circle at 30% 70%, #54a0ff 2px, transparent 2px),
        radial-gradient(circle at 70% 30%, #96ceb4 2px, transparent 2px);
    background-size: 200px 200px, 150px 150px, 180px 180px, 120px 120px, 160px 160px, 140px 140px;
    /* animation: confetti-fall 15s linear infinite; */
    z-index: 1;
}

@keyframes confetti-fall {
    0% { transform: translateY(-100vh) rotate(0deg); }
    100% { transform: translateY(100vh) rotate(360deg); }
}

.celebration-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

.celebration-icon {
    font-size: 4rem;
    margin-bottom: 2rem;
    animation: bounce 2s infinite;
    position: relative;
}

.icon-sparkles {
    position: absolute;
    top: -20px;
    right: -20px;
    width: 100px;
    height: 100px;
}

.sparkle {
    position: absolute;
    font-size: 1.5rem;
    /* animation: sparkle-float 3s ease-in-out infinite; */
}

.sparkle-1 {
    top: 0;
    left: 0;
    animation-delay: 0s;
}

.sparkle-2 {
    top: 20px;
    right: 0;
    animation-delay: 1s;
}

.sparkle-3 {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    animation-delay: 2s;
}

@keyframes sparkle-float {
    0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-10px) rotate(180deg); opacity: 1; }
}

.celebration-bg-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.bg-element {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    /* animation: bg-float 8s ease-in-out infinite; */
}

.bg-element-1 {
    width: 200px;
    height: 200px;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
}

.bg-element-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 15%;
    animation-delay: 2s;
}

.bg-element-3 {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 20%;
    animation-delay: 4s;
}

.bg-element-4 {
    width: 120px;
    height: 120px;
    top: 30%;
    right: 30%;
    animation-delay: 6s;
}

@keyframes bg-float {
    0%, 100% { transform: translateY(0) scale(1); opacity: 0.1; }
    50% { transform: translateY(-20px) scale(1.1); opacity: 0.2; }
}

.celebration-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.celebration-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

.celebration-message {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    padding: 2rem;
    margin: 2rem 0;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.celebration-message p {
    font-style: italic;
    font-size: 1.1rem;
    margin: 0;
}

.celebration-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 3rem;
    transform-style: preserve-3d;
    perspective: 1000px;
}

.celeb-stat {
    text-align: center;
    transform-style: preserve-3d;
    transition: all 0.6s ease;
    position: relative;
}

.celeb-stat:hover {
    transform: translateZ(50px) rotateY(15deg) scale(1.1);
}

.celeb-stat::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: conic-gradient(from 0deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57, #ff9ff3, #54a0ff);
    background-size: 400% 400%;
    border-radius: 50%;
    z-index: -1;
    /* animation: gradient-shift 3s ease infinite; */
    filter: blur(25px);
    opacity: 0;
    transition: opacity 0.5s ease;
}

.celeb-stat:hover::before {
    opacity: 0.6;
}

.celeb-stat {
    text-align: center;
}

.celeb-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--accent-color);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.celeb-label {
    font-size: 0.9rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Footer */
.footer {
    background: var(--primary-color);
    color: white;
    padding: 4rem 0 2rem;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-section h3,
.footer-section h4 {
    margin-bottom: 1rem;
    color: var(--accent-color);
}

.footer-section p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
}

.footer-section ul li a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section ul li a:hover {
    color: var(--accent-color);
}

.social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
}

.social-links a {
    width: 40px;
    height: 40px;
    background: var(--gradient-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: transform 0.3s ease;
}

.social-links a:hover {
    transform: translateY(-3px);
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.6);
}

/* Enhanced Responsive Design */
/* Tablet and smaller laptops */
@media (max-width: 1024px) {
    .container {
        max-width: 100%;
        padding: 0 30px;
    }
    
    .hero-title {
        font-size: 4rem;
    }
    
    .section-header h2 {
        font-size: 3rem;
    }
}

/* Mobile landscape and tablets */
@media (max-width: 768px) {
    /* Navigation */
    .hamburger {
        display: flex;
    }
    
    .nav-menu {
        display: none;
    }
    
    .nav-container {
        padding: 0 15px;
    }
    
    /* Hero section */
    .hero {
        padding: 0 15px;
        min-height: 90vh;
    }
    
    .hero-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
        padding: 0 15px;
    }
    
    .hero-title {
        font-size: 2.8rem;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: 1.3rem;
    }
    
    .hero-stats {
        justify-content: center;
        gap: 1.5rem;
    }
    
    .stat-number {
        font-size: 2rem;
    }
    
    /* Music controls */
    .music-controls {
        top: 90px;
        right: 15px;
    }
    
    .music-toggle {
        padding: 0.8rem 1.2rem;
        font-size: 0.9rem;
    }
    
    /* Floating card */
    .floating-card {
        padding: 2rem;
        margin: 0 15px;
    }
    
    .floating-card h3 {
        font-size: 1.5rem;
    }
    
    /* Sections */
    section {
        padding: 4rem 0 !important;
    }
    
    .section-header {
        margin-bottom: 3rem;
    }
    
    .section-header h2 {
        font-size: 2.5rem;
    }
    
    .section-header p {
        font-size: 1.2rem;
    }
    
    /* Timeline */
    .timeline::before {
        left: 30px;
    }
    
    .timeline-marker {
        left: 30px;
        transform: none;
        width: 50px;
        height: 50px;
    }
    
    .timeline-content {
        width: calc(100% - 80px);
        margin-left: 80px !important;
        margin-right: 0 !important;
        padding: 1.5rem;
    }
    
    .timeline-content h3 {
        font-size: 1.5rem;
    }
    
    /* Social work grid */
    .social-work-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .social-card {
        padding: 2rem;
    }
    
    .social-card h3 {
        font-size: 1.5rem;
    }
    
    /* Community content */
    .community-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    /* Gallery */
    .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }
    
    /* Interview section */
    .interview-card {
        padding: 2rem;
    }
    
    /* Celebration stats */
    .celebration-stats {
        flex-direction: column;
        gap: 2rem;
    }
    
    /* Footer */
    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }
}

